<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/hotel_header_bg" /> <!-- Modern hotel header image -->

        <!-- User Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/user_avatar"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop" /> <!-- Download a modern avatar and name it user_avatar.jpg -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">
                    <TextView
                        android:id="@+id/greeting_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, James!"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find your perfect room today!"
                        android:textSize="15sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Booking Summary Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/booking_summary_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Reservation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deluxe Suite - Check-in: Sep 28, 2:00 PM"
                    android:textSize="15sp"
                    android:textColor="#444"
                    android:layout_marginTop="6dp" />
                <Button
                    android:id="@+id/btn_view_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#2D9CDB"
                    android:textColor="#fff" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@color/background_card"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_search" /> <!-- Download a modern search icon and name it ic_search.png -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Search hotels, rooms, locations..."
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:textColorHint="@color/text_hint"
                android:textColor="#222"
                android:inputType="textNoSuggestions"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Categories -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/cat_standard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_standard_room" /> <!-- Standard room icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard"
                    android:textSize="13sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cat_deluxe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_deluxe_room" /> <!-- Deluxe room icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deluxe"
                    android:textSize="13sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cat_suite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_suite_room" /> <!-- Suite room icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suite"
                    android:textSize="13sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cat_presidential"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_presidential_room" /> <!-- Presidential room icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presidential"
                    android:textSize="11sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Featured Rooms -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured Rooms"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2D9CDB"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Room Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/featured_deluxe_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/room_deluxe"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp" /> <!-- Deluxe room image -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deluxe Ocean View"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spacious room with stunning ocean views and premium amenities."
                        android:textSize="13sp"
                        android:textColor="#666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$189/night"
                    android:textSize="15sp"
                    android:textColor="#2D9CDB"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Room Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/featured_suite_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/room_suite"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp" /> <!-- Suite room image -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Executive Suite"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luxurious suite with separate living area and city views."
                        android:textSize="13sp"
                        android:textColor="#666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$299/night"
                    android:textSize="15sp"
                    android:textColor="#2D9CDB"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
