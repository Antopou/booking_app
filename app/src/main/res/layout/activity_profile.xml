<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/header_booking_bg" /> <!-- Download a modern booking header image and name it header_booking_bg.jpg -->

        <!-- User Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/user_avatar"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop" /> <!-- Download a modern avatar and name it user_avatar.jpg -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">
                    <TextView
                        android:id="@+id/greeting_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, James!"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to book your next experience?"
                        android:textSize="15sp"
                        android:textColor="#666" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Booking Summary Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/booking_summary_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Booking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2D9CDB" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spa and Wellness - 20 Sep, 3:00 PM"
                    android:textSize="15sp"
                    android:textColor="#444"
                    android:layout_marginTop="6dp" />
                <Button
                    android:id="@+id/btn_view_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#2D9CDB"
                    android:textColor="#fff" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_search" /> <!-- Download a modern search icon and name it ic_search.png -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Search for services, venues..."
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:textColorHint="#999"
                android:textColor="#222"
                android:inputType="textNoSuggestions"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Categories -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/cat_spa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/cat_spa" /> <!-- Download a spa icon and name it cat_spa.png -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spa"
                    android:textSize="13sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cat_hotel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/cat_hotel" /> <!-- Download a hotel icon and name it cat_hotel.png -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotel"
                    android:textSize="13sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cat_event"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/cat_event" /> <!-- Download an event icon and name it cat_event.png -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event"
                    android:textSize="13sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cat_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/cat_food" /> <!-- Download a food icon and name it cat_food.png -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="13sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Featured Services -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured Services"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2D9CDB"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Service Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/featured_spa_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/featured_spa"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp" /> <!-- Download a spa service image and name it featured_spa.jpg -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luxury Spa Experience"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relax and rejuvenate with our premium spa services."
                        android:textSize="13sp"
                        android:textColor="#666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$49"
                    android:textSize="15sp"
                    android:textColor="#2D9CDB"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Service Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/featured_hotel_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/featured_hotel"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp" /> <!-- Download a hotel service image and name it featured_hotel.jpg -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5-Star Hotel Stay"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book a luxury room at the best price."
                        android:textSize="13sp"
                        android:textColor="#666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$120"
                    android:textSize="15sp"
                    android:textColor="#2D9CDB"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
