<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/room_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Room Image -->
        <ImageView
            android:id="@+id/room_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/room_standard" />

        <!-- Room Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Room Name and Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/room_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deluxe Ocean View"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#222" />

                    <TextView
                        android:id="@+id/hotel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grand Hotel Resort"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/availability_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:background="@drawable/status_badge_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

            </LinearLayout>

            <!-- Room Type and Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/room_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELUXE"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2D9CDB"
                    android:background="@drawable/circle_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

                <TextView
                    android:id="@+id/room_occupancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 guests"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_marginStart="12dp"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="4dp" />

                <TextView
                    android:id="@+id/room_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35 m²"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_marginStart="12dp"
                    android:drawableStart="@drawable/ic_size"
                    android:drawablePadding="4dp" />

                <TextView
                    android:id="@+id/bed_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="King bed"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_marginStart="12dp"
                    android:drawableStart="@drawable/ic_bed"
                    android:drawablePadding="4dp" />

            </LinearLayout>

            <!-- Amenities -->
            <TextView
                android:id="@+id/room_amenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WiFi • Air Conditioning • Sea View • Balcony"
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Rating and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <!-- Rating Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/room_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#222" />

                    <TextView
                        android:id="@+id/review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(124 reviews)"
                        android:textSize="12sp"
                        android:textColor="#666"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <!-- Price Section -->
                <TextView
                    android:id="@+id/room_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$189/night"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2D9CDB" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
