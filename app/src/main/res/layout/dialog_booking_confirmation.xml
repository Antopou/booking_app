<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Your Booking"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Room Information -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2D9CDB"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialog_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deluxe Ocean View"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222" />

            <TextView
                android:id="@+id/dialog_hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grand Ocean Resort"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Booking Details -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2D9CDB"
                android:layout_marginBottom="8dp" />

            <!-- Check-in -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check-in:"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/dialog_check_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sep 28, 2024 (15:00)"
                    android:textSize="14sp"
                    android:textColor="#222"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Check-out -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Check-out:"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/dialog_check_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sep 30, 2024 (11:00)"
                    android:textSize="14sp"
                    android:textColor="#222"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Guests -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guests:"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/dialog_guests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="14sp"
                    android:textColor="#222"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Nights -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nights:"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/dialog_nights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="14sp"
                    android:textColor="#222"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Price Details -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Breakdown"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2D9CDB"
                android:layout_marginBottom="8dp" />

            <!-- Price per night -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price per night:"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/dialog_price_per_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$189"
                    android:textSize="14sp"
                    android:textColor="#222" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp" />

            <!-- Total price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Price:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222" />

                <TextView
                    android:id="@+id/dialog_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$378"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2D9CDB" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Cancellation Policy -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancellation Policy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2D9CDB"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialog_cancellation_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free cancellation up to 24 hours before check-in"
                android:textSize="12sp"
                android:textColor="#666" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#666"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btn_confirm_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:textColor="#fff"
            android:backgroundTint="#2D9CDB"
            android:paddingHorizontal="24dp" />

    </LinearLayout>

</LinearLayout>
