<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:foreground="@drawable/ripple_effect"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="8dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section with Room Image and Basic Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Room Image Placeholder -->
            <ImageView
                android:id="@+id/booking_room_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/card_background_elevated"
                android:scaleType="centerCrop"
                android:src="@drawable/room_standard"
                app:shapeAppearanceOverlay="@style/RoundedImage" />

            <!-- Room and Hotel Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_booking_service_name"
                    style="@style/TextStyle.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deluxe Ocean View"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/item_booking_provider_name"
                    style="@style/TextStyle.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grand Hotel Resort"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/item_booking_status"
                style="@style/StatusBadge.Confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRMED"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            style="@style/DividerStyle"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Booking Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Date and Time Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/primary_blue" />

                    <TextView
                        android:id="@+id/item_booking_datetime"
                        style="@style/TextStyle.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sep 28 - Oct 2, 2024"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_person"
                        android:tint="@color/primary_blue" />

                    <TextView
                        android:id="@+id/item_booking_guests"
                        style="@style/TextStyle.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 guests â€¢ 4 nights"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Price Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    style="@style/TextStyle.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price"
                    android:textColor="@color/text_tertiary" />

                <TextView
                    android:id="@+id/item_booking_price"
                    style="@style/TextStyle.Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$756.00"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/btn_view_details"
                style="@style/ButtonStyle.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_manage_booking"
                style="@style/ButtonStyle.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>